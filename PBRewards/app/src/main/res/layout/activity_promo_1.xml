<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Toolbar with Back Button and Title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1A0D64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PBRewards"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow_foreground"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_gravity="start" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Promo Image -->
            <ImageView
                android:id="@+id/promoImage"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:src="@drawable/promo1"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Promo Title -->
                <TextView
                    android:id="@+id/promoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pastry Bundle Promo!"
                    android:textSize="33sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- Promo Period -->
                <TextView
                    android:id="@+id/promoPeriodText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo Period: 2 Jan - 2 May 2025"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"/>

                <!-- Description Label -->
                <TextView
                    android:id="@+id/descriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/promoDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enjoy 2 pastries at a special price!"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="5dp"/>

                <!-- Stores Info -->
                <TextView
                    android:id="@+id/Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stores: 2 for RM21 (city outlets) / 2 for RM25 (KLIA2)"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="10dp"/>

                <TextView
                    android:id="@+id/Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Pastries\n•  Croissant\n•  Crispy Sausage and Chesse Pastry\n•  Pain Au Chesse
                    n•  Choco Twist\n•  Almond Cream Cheese\n•  Pain Au Chocolat\n•  Best Ever Garlic Bread\n•  Sweet Potato Twist"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="10dp"/>

                <!-- Order Type -->
                <TextView
                    android:id="@+id/Text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More options available"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/Text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prices include 6% Tax | While stocks last | Terms and Conditions Apply"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"/>

                <!-- Terms and Conditions -->
                <TextView
                    android:id="@+id/termsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions:\n\n1. Not applicable to other discounts or promotions.
                    \n2. Offer valid at all Paris Baguette stores in Malaysia.\n3. Must be in one single transaction only."
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingTop="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>