<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Toolbar with Back Button and Title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1A0D64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PBRewards"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow_foreground"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_gravity="start" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <!-- Promo Image -->
            <ImageView
                android:id="@+id/promoImage"
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:src="@drawable/whatsapp_image_2025_03_20_at_17_50_26_bed16ae3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Promo Title -->
            <TextView
                android:id="@+id/promoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PB X UOB Partnership Offer!"
                android:textSize="33sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Promo Period -->
            <TextView
                android:id="@+id/promoPeriodText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo Period: 18 Sept - 31 Dec 2024"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingTop="6dp"/>

            <!-- Description Label -->
            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="8dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/promoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complimentary one Americano (hot or iced) with the purchase of one Mushroom Soup in a Bread Bowl."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="5dp"/>

            <!-- Stores Info -->
            <TextView
                android:id="@+id/storesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stores: All stores, except Gateway@KLIA2 and NU Sentral"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"/>

            <!-- Order Type -->
            <TextView
                android:id="@+id/orderTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order type: Dine-in, Takeaway\n\nValid every Monday - Friday only"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingTop="8dp"/>

            <!-- Terms and Conditions -->
            <TextView
                android:id="@+id/termsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions:
                \n\n1. Offer valid for UOB cardholders only. Payment must be made with a UOB debit or credit card.
                \n2. Offer valid from 18 September - 31 December 2024 only.\n3. Not valid for any other discounts or promotions.
                \n4. Offer valid at all Paris Baguette stores in Malaysia except Gateway@KLIA2 and NU Sentral."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>