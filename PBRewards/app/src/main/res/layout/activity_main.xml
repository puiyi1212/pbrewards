<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whatsapp_image_2025_02_23_at_00_31_18_4b30bac3"
    android:gravity="bottom"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to PB Rewards Malaysia"
        android:textSize="20sp"
        android:textColor="#2C10A9"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're just a few clicks away from free pastries, coffee, exclusive offers, and more!"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Button -->
    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LETâ€™S GET STARTED"
        android:textAllCaps="false"
        android:backgroundTint="#FFDA05"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:cornerRadius="50dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

